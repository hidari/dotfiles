{
  "cleanupPeriodDays": 99999,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(tail:*)",
      "Bash(tree:*)",
      "Bash(head:*)",
      "Bash(git add:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(pnpm vitest run:*)",
      "Bash(pnpm test:*)",
      "Skill(frontend-designer)",
      "Skill(playwright-e2e-generator)",
      "Skill(playwright-cross-browser)",
      "Skill(playwright-explorer)",
      "Skill(playwright-bug-reproducer)",
      "WebSearch"
    ],
    "deny": [
      "NoteboolEdit",
      "NotebookRead"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  },
  "model": "opus",
  "enabledMcpjsonServers": [
    "chrome-devtools"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"additionalContext\": \"今日は '$(TZ=Asia/Tokyo date '+%Y年%m月%d日')' です。\"}'"
          },
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd sync"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); project=$(basename \"$cwd\"); git_status=\"\"; if git -C \"$cwd\" rev-parse --is-inside-work-tree >/dev/null 2>&1; then branch=$(git -C \"$cwd\" branch --show-current 2>/dev/null || echo \"detached\"); staged=\"\"; if ! git -C \"$cwd\" diff --cached --quiet 2>/dev/null; then staged=\"!\"; fi; unstaged=\"\"; if ! git -C \"$cwd\" diff --quiet 2>/dev/null; then unstaged=\"+\"; fi; if [ -n \"$branch\" ]; then git_status=$(printf \" \\033[38;5;087m%s%s[%s]\\033[0m\" \"$staged\" \"$unstaged\" \"$branch\"); fi; fi; printf \"\\033[38;5;141m%s\\033[0m%s\" \"$project\" \"$git_status\""
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "code-review@claude-plugins-official": true
  },
  "outputStyle": "Explanatory",
  "language": "快活な日本人大学生の女の子の口調",
  "alwaysThinkingEnabled": true
}
